@model Trainee_MVCApp.Models.Course

@{
    ViewData["Title"] = "Edit";
    var AllTrainee = new SelectList(ViewBag.Trainees, "Id", "Name");
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEditPartial" model="@Model" />
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label for="TraineeId">Select Trainee:</label>
                <select asp-for="TraineeId" asp-items="@AllTrainee" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
