@model List<Car>
@{
	ViewData["Title"] = "Index";
}

<h1>ALL Cars</h1>
@functions{
	private void LinkToAction(string ControllerName, string ActionName, string Display, int? Id, string Bootclass="btn btn-primary")
	{
		@Html.ActionLink(Display, ActionName, ControllerName, new { Num = Id }, new { @class = Bootclass })
	}
}

@* @Html.ActionLink("Add New Car", "CreateCar", "Car", null, new { @class = "btn btn-primary" }) *@
@{
	LinkToAction("Car", "CreateCar", "Add New Car", null);
}

<br />
<table class="data-table table nowrap">
	<thead>
		<tr>
			<th>Num</th>
			<th>Model</th>
			<th>Color</th>
			<th>Manufacture</th>
			<th>Image</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@Html.DisplayFor(modelItem => item.Num)</td>
				<td>@Html.DisplayFor(modelItem => item.Model)</td>
				<td>@Html.DisplayFor(modelItem => item.Color)</td>
				<td>@Html.DisplayFor(modelItem => item.Manufacture)</td>
				<td><img src="/images/@item.ImgUrl" width="50px" height="50px" /></td>

				<td>
					@* @Html.ActionLink("Details", "CarDetails", "Car", new { Num = @item.Num }, new { @class = "btn btn-primary" }) *@
					@{
						LinkToAction("Car", "CarDetails", "Details", @item.Num);
					}
				</td>
				<td>
					@* @Html.ActionLink("Edit", "UpdateCar", "Car", new { Num = @item.Num }, new { @class = "btn btn-warning" }) *@
					@{
						LinkToAction("Car", "UpdateCar", "Edit", @item.Num, "btn btn-warning");
					}
				</td>
				<td>
					@* @Html.ActionLink("Delete", "DeleteCar", "Car", new { Num = @item.Num }, new { @class = "btn btn-danger" }) *@
					@{
						LinkToAction("Car", "DeleteCar", "Delete", @item.Num, "btn btn-danger");
					}
				</td>
			</tr>
		}

	</tbody>
</table>

