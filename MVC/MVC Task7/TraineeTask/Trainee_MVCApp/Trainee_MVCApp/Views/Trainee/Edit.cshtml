@model Trainee_MVCApp.Models.Trainee
@{
    ViewData["Title"] = "Edit";
    var TrackLst = new SelectList(ViewBag.Tracks, "Id", "Name");
}

<h1>Edit</h1>


<h4>Trainee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEditTraineePartial" ,model="Model" />

            <select asp-for="TrackId" asp-items="TrackLst"></select>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
